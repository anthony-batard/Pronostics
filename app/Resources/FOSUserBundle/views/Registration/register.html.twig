{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
<header>
        <div class="header-content">
            <div class="header-content-inner">
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.6&appId={{ facebookId }}";
        fjs.parentNode.insertBefore(js, fjs);
    }
    (document, 'script', 'facebook-jssdk'));


        function fb_login() {
            FB.getLoginStatus(function(response) {
                if (response.status === 'connected') {
                    // connected
                    //alert('Already connected, redirect to login page to create token.');
                    document.location = "{{ url("hwi_oauth_service_redirect", {service: "facebook"}) }}";
                } else {
                    // not_authorized
                    FB.login(function(response) {
                        if (response.authResponse) {
                            document.location = "{{ url("hwi_oauth_service_redirect", {service: "facebook"}) }}";
                        } else {
                            alert('Cancelled.');
                        }
                    }, {scope: 'email'});
                }
            });
        }
    </script>
    <h1><img class="img-responsive home_logo" src="{{ asset('bundles/dwfpronostics/images/Youbetsport.png') }}" alt="{{ app_name }}" /></h1>
    <div class="fb-login-button" data-max-rows="1" data-size="xlarge" data-show-faces="false" data-auto-logout-link="false" onlogin="fb_login()"></div>
{{ form_start(form, {'action': path('fos_user_registration_register'), 'attr': { 'class': 'form-signin' }}) }}
    <div data-rel="errors" class="errors">{{ form_errors(form) }}</div>
    <h2 class="form-signin-heading">{% trans %}Register{% endtrans %}</h2>

    {% if form.username.vars.errors|length %}
        <div class='alert alert-danger'>
        {{ form_errors(form.username) }}
        </div>
    {% endif %}
    {{ form_widget(form.username, {'attr': { 'class': 'form-control first', 'placeholder': 'Nom d\'utilisateur' }}) }}
    {% if form.email.vars.errors|length %}
        <div class='alert alert-danger'>
        {{ form_errors(form.email) }}
        </div>
    {% endif %}
    {{ form_widget(form.email, {'attr': { 'class': 'form-control last', 'placeholder': 'Email' }}) }}
    
    {% if form.plainPassword.first.vars.errors|length %}
        <div class='alert alert-danger'>
        {{ form_errors(form.plainPassword.first) }}
        </div>
    {% endif %}
    {{ form_widget(form.plainPassword.first, {'attr': { 'class': 'form-control first', 'placeholder': 'Mot de passe' }}) }}
    {% if form.plainPassword.second.vars.errors|length %}
        <div class='alert alert-danger'>
        {{ form_errors(form.plainPassword.second) }}
        </div>
    {% endif %}
    {{ form_widget(form.plainPassword.second, {'attr': { 'class': 'form-control last', 'placeholder': 'VÃ©rification' }}) }}
    {% if form.invitation.vars.errors|length %} 
        <div class='alert alert-danger'>
        {{ form_errors(form.invitation) }}
        </div>
    {% endif %}
    {{ form_widget(form.invitation, {'attr': { 'class': 'form-control last', 'placeholder': 'Code d\'invitation' }}) }}
    <button type="submit" class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{% trans %}Register{% endtrans %}" />
    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
    {% trans %}Register{% endtrans %}
    </button>
    {{ form_rest(form) }}
    {{ form_end(form) }}
    <p>{% trans %}Already have an account ? {% endtrans %}<a href="{{ path('fos_user_security_login') }}">{% trans %}Log in{% endtrans %}</a></p>
    </div>
    </div>
</header>
    
{% endblock fos_user_content %}