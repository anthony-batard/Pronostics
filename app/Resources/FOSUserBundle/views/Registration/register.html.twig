{% extends '::base.html.twig' %}

{% block title %}Identification - Pronostics{% endblock %}
{% block bodyclass %} class="login"{% endblock %}
{% block body %}
{{ form_start(form, {'attr': { 'class': 'form-signin' }}) }}
    <div data-rel="errors" class="errors">{{ form_errors(form) }}</div>
{#     <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">#}
    <h2 class="form-signin-heading">Inscrivez-vous</h2>
{#         <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />#}
	{% if form_errors(form.username) %}
	<div class='alert alert-danger'>
	{{ form_errors(form.username) }}
	</div>
	{% endif %}
    {{ form_widget(form.username, {'attr': { 'class': 'form-control first', 'placeholder': 'Nom d\'utilisateur' }}) }}
    {% if form_errors(form.email) %}
    <div class='alert alert-danger'>
    {{ form_errors(form.email) }}
    </div>
    {% endif %}
    {{ form_widget(form.email, {'attr': { 'class': 'form-control last', 'placeholder': 'Email' }}) }}
    
    {% if form_errors(form.plainPassword.first) %}
    <div class='alert alert-danger'>
    {{ form_errors(form.plainPassword.first) }}
    </div>
    {% endif %}
    {{ form_widget(form.plainPassword.first, {'attr': { 'class': 'form-control first', 'placeholder': 'Mot de passe' }}) }}
    {% if form_errors(form.plainPassword.second) %}
    <div class='alert alert-danger'>
    {{ form_errors(form.plainPassword.second) }}
    </div>
    {% endif %}
    {{ form_widget(form.plainPassword.second, {'attr': { 'class': 'form-control last', 'placeholder': 'Vérification' }}) }}
    {% if form_errors(form.invitation) %} 
    <div class='alert alert-danger'>
    {{ form_errors(form.invitation) }}
    </div>
    {% endif %}
    {{ form_widget(form.invitation, {'attr': { 'class': 'form-control last', 'placeholder': 'Code d\'invitation' }}) }}
        
{#         {{ form_widget(form.invitation, {'attr': { 'class': 'form-control first', 'placeholder': 'Invitation' }}) }}#}
    
